<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Facile Handover System</title>
    <link rel="shortcut icon" type="image/png" href="facile.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <style>

    </style>
</head>
<body>

    <div class="off-canvas-wrap" data-offcanvas>
        <div class="inner-wrap">
            <nav class="tab-bar">
                <section class="left-small">
                    <a class="left-off-canvas-toggle menu-icon" href="#"><span></span></a>
                </section>

                <nav class="top-bar hide-for-small">
                    <ul class="title-area">
                        <li class="name">
                            <h1>
                                <a href="#" onclick="return false" title="Foundation">Facile Handover System</a>
                            </h1>
                        </li>
                    </ul>

                    <section class="top-bar-section">
                        <ul class="right">
                            <li>
                                @Html.Partial("_LoginPartial")
                            </li>

                        </ul>
                    </section>
                </nav>

                <section class="right-small hide-for-medium-up">
                    <a class="right-off-canvas-toggle menu-icon" href="#"><span></span></a>
                </section>
            </nav>

            <!-- Off Canvas Menu -->
            <aside class="left-off-canvas-menu">
                <!-- whatever you want goes here -->
                <ul>
                    <li><a href="#">Item 1</a></li>

                </ul>
            </aside>

            <aside class="right-off-canvas-menu">
                <!-- whatever you want goes here -->
                <ul>
                    <li><a href="#">Item 1</a></li>

                </ul>
            </aside>

            <!-- main content goes here -->
            @Html.Partial("_TopMenu")


            <div class="row middle-row">
                <div class="large-12 columns">
                    @RenderBody()
                </div>
                </div>



                <!-- close the off-canvas menu -->
                <a class="exit-off-canvas"></a>

            </div>
        </div>


        <footer class="row">
            <div class="large-12 columns">
                <hr />
                <div class="row">
                    <div class="large-6 columns">
                        <p>&copy; @DateTime.Now.Year - Facile Handover System</p>
                    </div>
                    <div class="large-6 columns">
                        <ul class="inline-list right">
                            <li><a href="#">Help</a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </footer>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/foundation")
        @RenderSection("scripts", required: false)
        <script>
            $(document).foundation();
        </script>

    </body>
</html>
