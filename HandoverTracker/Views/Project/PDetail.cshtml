        <div class="content active" id="panel2">
            <!--Mangement Activties-->
            <h5>Management Activties</h5>
            <table style="width:100%;" class="responsive">
                <tr>
                    <th width="30%">
                        Activty Name
                    </th>
                    <th width="20%">
                        Input Artifact
                    </th>
                    <th width="20%">
                        Output Artifact
                    </th>
                    <th width="30%">
                        Roles
                    </th>
                </tr>
                @foreach (var item in Model.Where(f => f.Activty.Type == (int)HandoverTracker.Models.ActivtyTypes.PDMangementActivties))
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activty.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activty.InputArtifact.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Activty.OutputArtifact.Name)
                        </td>
                        <td>
                            @foreach (var i in item.Activty.ActivtyRoles)
                            {
                                <span>@i.RoleName</span><br />
                            }
                        </td>
                    </tr>
                }
