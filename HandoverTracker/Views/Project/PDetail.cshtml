@model IEnumerable<HandoverTracker.Models.ProjectActivty>

@{
    Layout = "~/Views/Shared/_WorkLayout.cshtml";
}

<fieldset>
    <legend>@ViewBag.Title Details</legend>
    <ul class="tabs" data-tab>
        <li class="tab-title active"><a href="#panel2">Pre-Delivery Phase</a></li>
        <li class="tab-title"><a href="#panel3">Transition</a></li>
        <li class="tab-title"><a href="#panel4">Post-Delivery Phase</a></li>
    </ul>
